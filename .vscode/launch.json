    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output/debug/simulator/macos/epsilon.app/Contents/MacOS/Epsilon",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "DEBUG",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "name": "(lldb) Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output/debug/simulator/macos/x86_64/test.headless.bin",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "DEBUG",
                    "value": "1"
                },
                {
                    "name": "ARCH",
                    "value": "x86_64"
                },
                {
                    "name": "TEST_MODE",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build tests",
        }
    ]
}